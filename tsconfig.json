{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
     "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
   },
    "moduleResolution": "node",
    // esModuleInterop gives you the ability to use named import instead of require in webpack.config.ts 
    "esModuleInterop" : true,
    // allowSyntheticDefaultImports allows you to import default export from a module that doesn't have a default export
    // This is useful when you are using a module that doesn't have a default export
    // use  import React from 'react'  --  instead of  --  import * as React from 'react' 
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },
}